                        </ul>
                    </li>
                        -->
                </ul>
                
            </div>
            
        </div>
        <!--Location bar-->
    </div>
    <div class="container loc-bar">
        <div class="row col-md-12" id="locBar">
            <a href="@Url.Action("Index","Home")">Home</a> > 
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ICE Animations</p>
        </footer>
    </div>

    <!--@@Scripts.Render("~/bundles/jquery")
