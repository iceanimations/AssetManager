@model IEnumerable<AssetManager.Models.Project>

@{
    ViewBag.Title = "Home";
    var thumb = "http://placehold.it/500/CCCCCC&amp&text={0}";
    var url = "";
}

<div class="jumbotron" style="margin-top: 10px;">
    <h1>IDAM</h1>
    <p class="lead">ICE Digital Asset Manager</p>
</div>
<div class="container">
    <div class="col-md-8 col-md-offset-2" >
        <div class="carousel slide" id="myCarousel">
            <div class="carousel-inner">
                <div class="item active">
                    <div class="col-md-4">
                        @if (Model.First().Thumbnail != null) {
                            url = Url.Content(Model.First().Thumbnail);
                        }
                        else
                        {
                            url = String.Format(thumb, Model.First().Name);
                        }
                        <a href="@Url.Action("Index", "Assets", new { id = Model.First().Id }) "><img src="@url" class="img-responsive" width="500" height="500"></a>
                        <div class="urun-title"><span class="glyphicon glyphicon-star"></span>@Model.First().Name</div>
                    </div>
                </div>
                @foreach(var project in Model.Skip(1)) {
                    <div class="item">
                        <div class="col-md-4">
                            @if (project.Thumbnail != null)
                            {
                                url = Url.Content(project.Thumbnail);
                            }
                            else
                            {
                                url = String.Format(thumb, project.Name);
                            }
                            <a href="@Url.Action("Index", "Assets", new { id = project.Id })"><img src=@url class="img-responsive" width="500" height="500"></a>
                            <div class="urun-title"><span class="glyphicon glyphicon-star"></span>@project.Name</div>
                        </div>
                    </div>
                }
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
        </div>
    </div>
</div>