@model AssetManager.Models.ComponentArchive

@{
    ViewBag.Title = "Details";
}

<script>
    $("#locBar").append("<a href=@Url.Action("Index", "Assets", new { id=Model.Component.Asset.Category.Project.Id })>@Model.Component.Asset.Category.Project.Name</a> > ");
    $("#locBar").append("<a href=@Url.Action("Index", "Components", new { id = Model.Component.Asset.Id })>@Model.Component.Asset.Name</a> > ");
    $("#locBar").append("<a href=@Url.Action("Index", new { id = Model.ComponentId })>@Model.Component.Name</a> > ");
    $("#locBar").append("<span>@Model.ArchiveDate.ToString()</span>");
</script>

<h2>Component Archive Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ArchiveDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArchiveDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Component.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Component.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ComponentDateTimeCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ComponentDateTimeCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ComponentDateTimeUpdated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ComponentDateTimeUpdated)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Revive", "Revive", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index", new { id = Model.ComponentId })
</p>
