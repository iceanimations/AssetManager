@model IEnumerable<AssetManager.Models.User>

@{
    ViewBag.Title = "Users";
}

<script>
    $("#locBar").append("<span>Users</span>");
</script>

<h2>Users</h2>

<div class="col-md-2" style="padding-top: 5px;">
    @Html.ActionLink("Create New User", "Create")
</div>
@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-3 pull-right">
                @Html.TextBox("SearchString", null, htmlAttributes: new { @class = "form-control", autofocus = "", placeholder = "Search", onchange = "this.form.submit()", onfocus = "this.value = this.value" })
            </div>
        </div>

    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            <!--@@Html.ActionLink("Details", "Details", new { id=item.Id }) |-->
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
