@model IEnumerable<AssetManager.Models.ComponentRule>

@{
    ViewBag.Title = "Component Rules";
}

<h2>Component Rules</h2>

<p>
    @Html.ActionLink("Create New Rule", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Component.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Component.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { ComponentId = item.ComponentId, UserId = item.UserId }) |
            @Html.ActionLink("Details", "Details", new { ComponentId = item.ComponentId, UserId = item.UserId }) |
            @Html.ActionLink("Delete", "Delete", new { ComponentId = item.ComponentId, UserId = item.UserId })
        </td>
    </tr>
}

</table>
