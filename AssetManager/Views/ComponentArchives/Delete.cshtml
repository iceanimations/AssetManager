@model AssetManager.Models.ComponentArchive

@{
    ViewBag.Title = "Delete";
}

<script>
    $("#locBar").append("<a href=@Url.Action("Index", "Assets", new { id=ViewBag.Project.Id })>@ViewBag.Project.Name</a> > ");
    $("#locBar").append("<a href=@Url.Action("Index", "Components", new { id=ViewBag.Asset.Id })>@ViewBag.Asset.Name</a> > ");
    $("#locBar").append("<a href=@Url.Action("Index", new { id = Model.ComponentId })>@ViewBag.Component.Name</a> > ");
    $("#locBar").append("<span>@Model.ArchiveDate.ToString()</span>");
</script>

<h2>Delete Component Archive</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ArchiveDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArchiveDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Component.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Component.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", new { id = Model.ComponentId })
        </div>
    }
</div>
